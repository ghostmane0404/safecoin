<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
  <aapt:attr name="android:drawable">
    <vector android:width="108dp"
        android:height="108dp"
        android:viewportWidth="108"
        android:viewportHeight="108">

      <!-- Background -->
      <path android:name="background"
          android:pathData="M0,0h108v108h-108z"
          android:fillColor="#0F0F0F"/>

      <!-- Icon group - starts invisible and rotated -->
      <group android:name="iconGroup"
          android:translateX="34"
          android:translateY="18"
          android:rotation="-45"
          android:alpha="0">

        <path android:name="leftSide"
            android:strokeWidth="1"
            android:pathData="M20.597,1.767L1.793,35.685L19.924,48.809L20.236,26.951L20.597,1.767Z"
            android:fillColor="#A87AD7"
            android:strokeColor="#000000"/>

        <path android:name="rightSide"
            android:strokeWidth="1"
            android:pathData="M20.651,1.77L20.222,3.305L19.578,48.339L19.978,48.811L38.76,37.235L20.651,1.77Z"
            android:fillColor="#925FC6"
            android:strokeColor="#000000"/>

        <path android:name="bottomLeft"
            android:strokeWidth="1"
            android:pathData="M19.624,69.76L19.867,52.772L1.735,39.74L19.624,69.76Z"
            android:fillColor="#804FB0"
            android:strokeColor="#000000"/>

        <path android:name="bottomRight"
            android:strokeWidth="1"
            android:pathData="M20.094,52.781L19.862,53.083L19.634,69.014L19.851,69.77L38.702,41.289L20.094,52.781Z"
            android:fillColor="#704898"
            android:strokeColor="#000000"/>

        <path android:name="middleTop"
            android:strokeWidth="1"
            android:pathData="M19.924,48.809L38.759,37.3L20.235,27.067L19.924,48.809Z"
            android:fillColor="#804FB0"
            android:strokeColor="#000000"/>

        <path android:name="middleBottom"
            android:strokeWidth="1"
            android:pathData="M1.792,35.751L19.924,48.809L20.235,27.067L1.792,35.751Z"
            android:fillColor="#704898"
            android:strokeColor="#000000"/>
      </group>
    </vector>
  </aapt:attr>

  <!-- Main animation: fade in + rotate to normal position + scale -->
  <target android:name="iconGroup">
    <aapt:attr name="android:animation">
      <set>
        <!-- Fade in animation -->
        <objectAnimator
            android:propertyName="alpha"
            android:duration="300"
            android:valueFrom="0.0"
            android:valueTo="1.0"
            android:startOffset="200"
            android:interpolator="@android:interpolator/accelerate_decelerate" />

        <!-- Rotation from -45° to 0° (top-right to normal) -->
        <objectAnimator
            android:propertyName="rotation"
            android:duration="1200"
            android:valueFrom="-45"
            android:valueTo="0"
            android:startOffset="200"
            android:interpolator="@android:interpolator/overshoot" />

        <!-- Scale animation for entrance effect -->
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="1200"
            android:valueFrom="0.6"
            android:valueTo="1.0"
            android:startOffset="200"
            android:interpolator="@android:interpolator/overshoot" />

        <objectAnimator
            android:propertyName="scaleY"
            android:duration="1200"
            android:valueFrom="0.6"
            android:valueTo="1.0"
            android:startOffset="200"
            android:interpolator="@android:interpolator/overshoot" />
      </set>
    </aapt:attr>
  </target>
</animated-vector>